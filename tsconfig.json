{
  "compilerOptions": {
    "module": "commonjs",
    "alwaysStrict": true,
    "target": "es6",
    "lib": ["es2017"],
    "noImplicitAny": true,
    "moduleResolution": "node",
    "removeComments": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": ["types/*"]
    },
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": ["src", "test"]
}
